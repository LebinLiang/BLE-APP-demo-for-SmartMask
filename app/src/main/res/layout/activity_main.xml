<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitytest.example.com.bledemo.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/saomiao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="连接设备"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/saomiao"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/face_detect" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/imageView2"
            app:srcCompat="@drawable/bluetooth" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="56dp"
            android:layout_height="42dp"

            android:layout_alignTop="@+id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/imageView3"
            app:srcCompat="@drawable/temperature" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="49dp"
            android:layout_height="41dp"

            android:layout_alignTop="@+id/imageView4"
            android:layout_marginStart="22dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/imageView4"
            app:srcCompat="@drawable/sensor" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/saomiao"
            android:layout_marginBottom="111dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/future_mask_n"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/saomiao"
            android:layout_centerInParent="true"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="开发团队：华南农业大学\n版本：1.00beta"
            android:textColor="#7C7C7C"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saomiao"
            android:layout_centerVertical="true"
            android:layout_marginTop="-127dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="       Smart   Protection   Perception   \n  \n 智能      保护     感知"
            android:textSize="14sp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
